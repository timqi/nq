#
# url=https://raw.githubusercontent.com/timqi/nq_thin_client/main/README; if command -v curl 2>&1 >/dev/null; then curl -s --progress-bar -L $url | sh; elif command -v wget 2>&1 >/dev/null; then wget -O- $url | sh; fi; [ -d $HOME/nq ] && source $HOME/nq/shprofile

download_and_decompress() {
    url=$1
    target=$2
    echo "Download to $target"
    if command -v curl 2>&1 >/dev/null; then
        curl -L -H "Cache-Control: no-cache" --progress-bar "$url" | tar -zx -C $target
    elif command -v wget 2>&1 >/dev/null; then
        wget $1 -O - | tar -zx -C $target
    fi
}

base_url="https://raw.githubusercontent.com/timqi/nq_thin_client"

# download
nq_dir="$HOME/nq"
[ -d $nq_dir ] && rm -rf $nq_dir
mkdir -p $nq_dir
download_and_decompress "$base_url/main/nq.thin.tar.gz" "$nq_dir"
download_and_decompress "$base_url/vim/vim.thin.tar.gz" "$nq_dir/vim"

# add vim executable
vim_dir="$nq_dir/vim"
ln -sv $vim_dir $HOME/.vim
cat <<EOF > "$nq_dir/bin/vim"
VIMRUNTIME="$vim_dir/runtime" "$vim_dir/vim" \$@
EOF
chmod +x "$nq_dir/bin/vim"

# handle terminfo in alpine
if grep -q "alpine" /etc/os-release; then
    mv "$nq_dir/vim/terminfo" /etc
fi


ln -sv $nq_dir/tmux.conf $HOME/.tmux.conf

# add source shprofile
profile="$HOME/.profile"
source_cmd="source $nq_dir/shprofile"
if [ ! -f "$profile" ]; then
    echo "$source_cmd" > $profile
else
    if ! grep -q "$source_cmd" $profile; then
        echo "$source_cmd" >> $profile
    fi
fi

