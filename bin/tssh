#!/bin/sh

if [ $# -eq 0 ]; then
    echo "no host specified"
    return
fi

host0=$1
shift
if [ $# -eq 0 ]; then
    issh $host0
    return
fi

tmux new-window -n tssh issh $host0
for host in "$@"; do
    tmux split-window -h issh "$host"
    tmux select-layout tiled
done
tmux select-pane -t 1
tmux setw synchronize-panes
